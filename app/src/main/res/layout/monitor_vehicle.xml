<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:id="@+id/layoutVideo1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layout_h264View1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            android:orientation="horizontal">
            <h264.com.H264View
                android:id="@+id/h264View1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_h264View2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            android:orientation="horizontal">
            <h264.com.H264View
                android:id="@+id/h264View2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutVideo2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layout_h264View3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            android:orientation="horizontal">
            <h264.com.H264View
                android:id="@+id/h264View3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_h264View4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            android:orientation="horizontal">
            <h264.com.H264View
                android:id="@+id/h264View4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnStartPlay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/login_quit_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:text="暂停播放"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btnEndPlay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/login_quit_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:text="停止播放"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <Chronometer
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:format="%"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnScreenshot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="截屏"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btnFindVideo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="查看录像"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <Button
            android:id="@+id/startVideo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="开始录制"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/endVideo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="停止录制"
            android:textSize="18dp"/>
    </LinearLayout>

</LinearLayout>
