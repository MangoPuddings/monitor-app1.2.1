<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">
        <ListView
            android:id="@+id/lv_police_vehicle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:dividerHeight="10dp"
            android:divider="#F0F0F0"
            android:scrollbars="none">
        </ListView>
        <LinearLayout
            android:id="@+id/layout_policle_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFF"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_police_vehicleid"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textSize="16dp"
                    android:text="车牌号码"/>
                <TextView
                    android:id="@+id/tv_police_vehicleid"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:gravity="center|right"
                    android:textColor="#B98E48"
                    android:textSize="14dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@mipmap/ic_open"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F1F1F1"/>
            <LinearLayout
                android:id="@+id/layout_police_type"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textSize="16dp"
                    android:text="报警类型"/>
                <TextView
                    android:id="@+id/tv_police_type"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:gravity="center|right"
                    android:textColor="#B98E48"
                    android:textSize="14dp"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@mipmap/ic_open"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F1F1F1"/>

            <LinearLayout
                android:id="@+id/layout_police_owner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textSize="16dp"
                    android:text="业户"/>
                <TextView
                    android:id="@+id/tv_police_owner"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:gravity="center|right"
                    android:textColor="#B98E48"
                    android:textSize="14dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@mipmap/ic_open"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F1F1F1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_police_query"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="查 询"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"

                    android:textColor="#FFFFFF"
                    android:background="@drawable/login_"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_police_clear"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="重 置"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/login_"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_police_cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="关 闭"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/login_"
                    android:gravity="center"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F1F1F1"/>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>
