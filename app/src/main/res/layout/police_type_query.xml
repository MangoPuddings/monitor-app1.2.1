<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_police"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="请选择查询的报警类型:"
        android:textColor="#B98E48"
        android:layout_marginLeft="2dp"
        android:gravity="center"/>
    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="5dp"
        android:numColumns = "3">
    </GridView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#8B8B8B"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/police_type1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="GNSS天线未接或被剪断"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/police_type2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="GNSS天线短路"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/police_type3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="GNSS模块发生故障"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/police_type4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="超速报警"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/police_type5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="超时停车"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/police_type6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="摄像头故障"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/police_type7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="终端主电源欠压"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/police_type8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="终端主电源掉电"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/police_type9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="终端LCD或显示器故障"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/police_type10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="道路类型超速报警"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/police_type11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="TTS模块故障"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/police_type12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="停车报警"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_police_type_query"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/police_type6"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="确       定"/>
    </LinearLayout>
</LinearLayout>
