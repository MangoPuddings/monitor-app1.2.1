<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_vehicle_police_type"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:src="@mipmap/ic_police_info"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_marginLeft="0dp"
        android:layout_height="80dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_vehicle_police_vehicleid"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:text="车牌号码"
                android:textColor="#28B4F1"
                android:gravity="center|left"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_vehicle_police_owner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:textColor="#746931"
                android:gravity="center|left"/>
            <TextView
                android:id="@+id/tv_vehicle_police_state"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:text="处理状态"
                android:textColor="#746931"
                android:gravity="center|right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_vehicle_police_type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="报警类型"
                android:textSize="12dp"
                android:textColor="#EC8D18"
                android:gravity="center|left"/>
            <TextView
                android:id="@+id/tv_vehicle_police_startTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:text="报警时间"
                android:textColor="#746931"
                android:gravity="center|right"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
