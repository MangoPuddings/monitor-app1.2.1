<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/bule"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:layout_weight="12"
            android:background="@drawable/search_style"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1.3"
                android:src="@mipmap/search" />

            <EditText
                android:id="@+id/tv_police_search"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="12"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/search_style"
                android:completionThreshold="1"
                android:textSize="18dp"
                android:dropDownHeight="360dp"
                android:hint="请输入需要查询的车辆"
                android:maxLength="15"
                android:singleLine="true"
                android:textColorHint="#CDCDCD" />

            <ImageView
                android:id="@+id/iv_police_search_delete"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_monitor_vehicle_search" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_police_vehicle_name"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"
        android:divider="#F0F0F0">
    </ListView>
</LinearLayout>
