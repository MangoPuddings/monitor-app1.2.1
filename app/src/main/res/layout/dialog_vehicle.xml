<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="vertical" >

        <TextView
            android:id="@+id/vehicle_title"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:background="#15B2DB"
            android:text="提示"
            android:textSize="24dp"
            android:textColor="#FFFFFF"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FAEACE"
            android:gravity="center" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:text="经纬度："/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#AAAAAA"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/context_lat_lon"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:text="角度："/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#AAAAAA"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/context_angle"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:text="在线状态："/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#AAAAAA"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/context_icon_type"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:text="车速(km/h)："/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#AAAAAA"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/context_speed"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:text="行驶路程(km)："/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#AAAAAA"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/context_miles"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:text="GPS Time："/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#AAAAAA"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/context_gps_time"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="000000"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffd0d0d0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:background="#F0F0F0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_break"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:background="#F79050"
                android:textSize="18dp"
                android:text="关   闭" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
